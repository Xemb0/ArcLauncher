<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#7C4DFF"/> <!-- The color of the outer circle -->
        </shape>
    </item>

    <!-- Inner circle -->
    <item android:top="300dp" android:left="300dp" android:right="300dp" android:bottom="300dp"> <!-- Add padding to position the inner circle -->
        <shape android:shape="oval">
            <solid android:color="#FF6B4F"/> <!-- The color of the inner circle -->
        </shape>
    </item>

</layer-list>
