<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient -->
    <gradient
        android:type="linear"
        android:angle="90"
        android:startColor="#68F1F1F1"
        android:centerColor="#68050000"
        android:endColor="#00FFFFFF" />

    <!-- Triangle shape -->
    <corners android:radius="0dp" />

    <size android:width="@dimen/_8sdp" android:height="@dimen/_42sdp" />

    <item android:top="-100dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="#00000000" />
                <stroke
                    android:color="#00000000"
                    android:width="0dp" />
                <size android:width="1000dp" android:height="1000dp" />
            </shape>
        </rotate>
    </item>
</shape>
