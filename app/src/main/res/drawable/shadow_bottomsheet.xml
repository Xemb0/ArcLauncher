<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item
        android:bottom="@dimen/_minus60sdp"
        android:left="@dimen/_minus60sdp"
        android:right="@dimen/_minus60sdp"
        android:top="@dimen/_8sdp">
        <shape android:shape="oval">
            <solid android:color="#00000000" /> <!-- Transparent background -->
          <!-- Outer stroke -->
        </shape>
    </item>

    <!-- Gradient -->
    <item
        android:bottom="@dimen/_minus60sdp"
        android:left="@dimen/_minus60sdp"
        android:right="@dimen/_minus60sdp"
        android:top="@dimen/_8sdp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#08000000"
                android:endColor="#07101010"
                android:type="radial"
                android:gradientRadius="@dimen/_600sdp"
                android:angle="95" />
        </shape>
    </item>
</layer-list>
