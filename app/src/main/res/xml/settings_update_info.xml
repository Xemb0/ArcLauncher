<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/ArcUpdate">

        <EditTextPreference
            app:key="current_version_key"
            app:title="@string/CurruntVersion"
            app:defaultValue="@integer/DefaultVersion"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/AutoUpdates">

        <SwitchPreferenceCompat
            app:key="auto_update_key"
            app:title="@string/AutoUpdate" />

    </PreferenceCategory>

</PreferenceScreen>
