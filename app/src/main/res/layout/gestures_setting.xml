<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="@dimen/_200sdp">

    <Button
        android:id="@+id/double_tap_option"
        android:layout_width="match_parent"
        android:background="@color/Transparent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Double Tap"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/swipe_down_option"
        android:background="@color/Transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Swipe Down"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/swipe_up_screen_option"
        android:background="@color/Transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Swipe Up From Screen"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/longpress"
        android:background="@color/Transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Touch And Hold"
        android:textAlignment="textStart" />

</LinearLayout>
