<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homescreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout

        app:behavior_peekHeight="340dp"
        android:background="@drawable/bg_bottomsheet"
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"

        android:layout_height="@dimen/_250sdp"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/firstletter"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_120sdp"

        android:layout_centerHorizontal="true"

            android:background="@drawable/circular_backgraound"
            android:fontFamily="sans-serif"
            android:text="A"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycalview"
            android:translationY="-120dp"
            android:layout_width="match_parent"
            android:layout_below="@id/firstletter"
            android:layout_height="@dimen/_130sdp"

            android:layout_alignParentBottom="true"


            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
       android:background="@drawable/bg_bottomsheet"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/up_arrow"
            android:translationY="-10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            app:layout_anchor="@+id/seekArc"
            app:layout_anchorGravity="top|center" />


        <com.marcinmoskala.arcseekbar.ArcSeekBar
            android:id="@+id/seekArc"
            android:layout_width="@dimen/_280sdp"
            android:layout_centerInParent="true"
            android:translationY="-20dp"
            android:layout_height="@dimen/_110sdp"
            android:hapticFeedbackEnabled="true"


            android:padding="@dimen/_30sdp"

            app:progressBackgroundColor="@color/colorPrimary"
            app:progressColor="#00000000"
            app:thumb="@drawable/thumb2" />
    </RelativeLayout>

    <LinearLayout
        style="@style/Animation.Design.BottomSheetDialog"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_width="match_parent"
android:background="@color/white"
        android:orientation="vertical"
        app:behavior_peekHeight="60dp"
        android:id="@+id/bottomSheet2"
        android:layout_height="match_parent">
        <include layout="@layout/serachview"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycalDrawer"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />

    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>