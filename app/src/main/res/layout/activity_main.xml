<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homescreen"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity">



    <FrameLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottomsheet"
        style="@style/Widget.Design.BottomSheet.Modal"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parent_layout"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                android:id="@+id/topDrawerLayout">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycalview"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="-129dp"

                    android:layout_alignParentBottom="true" />

                <TextView
                    android:id="@+id/firstletter"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_250sdp"
                    android:textSize="34sp"
                    android:textColor="#FFFFFF"
                    android:text="A"
                    android:padding="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circular_backgraound"
                    android:layout_above="@id/recycalview"
                    />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_height="@dimen/_100sdp">

                <com.marcinmoskala.arcseekbar.ArcSeekBar
                    android:id="@+id/seekArc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:padding="@dimen/_20sdp"
                    android:hapticFeedbackEnabled="true"
                    app:progressBackgroundColor="@color/colorPrimary"
                    app:progressColor="#00000000"
                    app:thumb="@drawable/thumb2" />



            </FrameLayout>


        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        app:layout_anchor="@+id/bottomSheet"
        app:layout_anchorGravity="top|center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
